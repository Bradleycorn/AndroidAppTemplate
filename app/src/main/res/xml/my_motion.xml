<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetStart="@+id/no_bet_type_selected"
            motion:constraintSetEnd="@+id/bet_type_selected"
            motion:duration="250" />


    <ConstraintSet android:id="@+id/no_bet_type_selected">
        <Constraint android:id="@+id/back_arrow">
            <PropertySet android:visibility="gone" />
        </Constraint>
        <Constraint android:id="@+id/bet_type">
            <PropertySet android:visibility="gone" />
        </Constraint>
    </ConstraintSet>



    <ConstraintSet android:id="@+id/bet_type_selected">
        <Constraint android:id="@+id/back_arrow">
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint android:id="@+id/bet_type">
            <PropertySet android:visibility="visible" />
        </Constraint>
    </ConstraintSet>

</MotionScene>