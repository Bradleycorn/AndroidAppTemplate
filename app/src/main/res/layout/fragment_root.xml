<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/my_motion_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layoutDescription="@xml/my_motion"
        app:currentState="@+id/bet_type_selected"
        tools:context=".ui.rootFragment.RootFragment"
        android:background="#aaaaaa">

    <ImageView
             android:id="@+id/back_arrow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:src="@drawable/ic_arrow_back"
             android:visibility="gone"
             android:paddingStart="8dp"
             android:paddingEnd="8dp"
              />

    <TextView
            android:id="@+id/bet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Trifecta"
            android:visibility="gone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            />

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/bet_tyoe_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/bet_type"
            app:layout_constraintEnd_toEndOf="parent"
            />
</androidx.constraintlayout.motion.widget.MotionLayout>